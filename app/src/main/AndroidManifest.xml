<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidtitan.culturedapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>


    <application
        android:name=".main.CulturedApp"
        android:allowBackup="true"
        android:icon="@mipmap/cultured_app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".main.newsfeed.ui.NewsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.toparticle.ui.TopArticleActivity"
            android:label="@string/title_activity_top_article"
            android:theme="@style/AppTheme"></activity>

        <!-- SyncAdapter Components -->

        <service android:name=".main.sync.ArticleAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <service android:name=".main.sync.ArticleSyncService"
            android:exported="false"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <provider
            android:name=".main.provider.CulturedContentProvider"
            android:authorities="com.androidtitan.culturedapp.provider"
            android:syncable="true"
            android:enabled="true"
            android:exported="false" />

        <!-- Firebase Services -->
        <service
            android:name=".main.firebase.FbMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".main.firebase.FbInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:enabled="true"
            android:name=".main.web.services.FacetDownloadService"
            android:process=":alarmService" />

    </application>

</manifest>