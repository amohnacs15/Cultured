<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorCoordinatorLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtitan.culturedapp.main.newsfeed.ui.ErrorFragment"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/nice_error"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/extraInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/errorTextView"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/restart_app" />

    <TextView
        android:id="@+id/viewOfflineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restartTextView"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/view_offline" />

    <TextView
        android:id="@+id/restartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extraInfoTextView"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/restart_app" />

</RelativeLayout>
