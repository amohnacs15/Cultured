<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="false">

    <RelativeLayout
        android:id="@+id/landing_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:clipChildren="false">
        <!-- Or we could try setting the height of the layour to 150 -->

        <!-- ImageView.  It will be seen behind our Filter -->
        <ImageView
            android:id="@+id/backhround_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chicago"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentPrimary"/>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:text="@string/landing_welcome"
            android:textColor="@color/colorHighlight"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/instruction"
            android:textColor="@color/colorHighlight"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </RelativeLayout>


    <ListView
        android:id="@+id/champion_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/landing_header"
        android:clickable="true"
        android:drawSelectorOnTop="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:padding="30dp"
        android:text="@string/emptyListview"
        android:textColor="@color/colorDivider"
        android:visibility="gone"/>

    <!-- Shadow -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/landing_header"
        android:background="@drawable/dropshadow" />


</RelativeLayout>

