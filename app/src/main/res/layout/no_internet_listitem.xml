<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools" app:ignore="NamespaceTypo">

    <data>
        <variable name="article" type="com.androidtitan.culturedapp.model.newyorktimes.Article"/>
        <variable name="multimedium" type="com.androidtitan.culturedapp.model.newyorktimes.Multimedium" />
        <variable name="glide" type="com.bumptech.glide.Glide" />
    </data>

    <android.support.v7.widget.CardView
                                        android:id="@+id/placeCard"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/defaultt"
                                        android:layout_marginStart="@dimen/defaultt"
                                        android:layout_marginTop="@dimen/half_default"
                                        android:layout_marginBottom="@dimen/half_default"
                                        android:background="@drawable/ripple"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:foreground="?selectableItemBackground"
                                        card_view:cardElevation="4dp">

        <RelativeLayout
                android:id="@+id/rippleForeground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/binding_article_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{multimedium.url}"/>

            <TextView
                    android:id="@+id/binding_facet_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:padding="12dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="@{article.geoFacet[0] ?? View.GONE}"/>

            <TextView
                    android:id="@+id/binding_article_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/binding_article_imageview"
                    android:layout_alignParentStart="true"
                    android:gravity="bottom"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:text="@{article.title}"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>