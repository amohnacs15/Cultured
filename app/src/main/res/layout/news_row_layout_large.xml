<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/ripple"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rippleForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/articleImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:transitionName="@string/transition_news_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/articleImageView"
            android:padding="8dp"
            android:background="@drawable/bg_gradient_primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/moreDetailLinearLayout"
                android:padding="8dp"
                android:gravity="bottom"
                android:text="@string/placeholder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/moreDetailLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="8dp">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/placeholder"/>

                <TextView
                    android:id="@+id/sectionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="@string/placeholder"/>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/infoRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/articleImageView"
            android:background="@android:color/white"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">


            <TextView
                android:id="@+id/abstractTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="@string/placeholder" />


           <!-- <ImageView
                android:id="@+id/globalImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/abstractTextView"
                android:layout_margin="8dp"
                android:src="@drawable/ic_plane_takeoff"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold" />-->

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>